<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ProgressSelectBar">
        <attr name="anchor_src" format="reference" />
        <attr name="anchor_size" format="dimension" />
        <attr name="bar_background" format="color" />
        <attr name="bar_length" format="dimension" />
        <attr name="bar_height" format="dimension" />
        <attr name="bar_corner" format="dimension" />
    </declare-styleable>

</resources>